#!/bin/bash
# Seismic Core Secrets Configuration Template
# Copy this file to /root/.seismic_secrets.env and fill in your actual values
# chmod 600 /root/.seismic_secrets.env

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Database Connection
DATABASE_URL="postgres://doadmin:YOUR_PASSWORD@YOUR_HOST:25060/YOUR_DATABASE?sslmode=require"
DIRECT_DATABASE_URL="postgres://doadmin:YOUR_PASSWORD@YOUR_HOST:25060/YOUR_DATABASE?sslmode=require"

# Database Connection Details
PGHOST="YOUR_DATABASE_HOST"
PGPORT="25060"
PGDATABASE="YOUR_DATABASE_NAME"
PGUSER="doadmin"
PGPASSWORD="YOUR_DATABASE_PASSWORD"
PGSSLMODE="require"

# ===== AUTHENTICATION SECRETS =====
# Better Auth (Primary)
BETTER_AUTH_ENABLED="true"
BETTER_AUTH_SECRET="YOUR_RANDOM_SECRET_KEY_32_CHARS"

# NextAuth (Legacy)
NEXTAUTH_SECRET="YOUR_RANDOM_SECRET_KEY_32_CHARS"
AUTH_SECRET="YOUR_RANDOM_SECRET_KEY_32_CHARS"
AUTH_TRUST_HOST="true"

# ===== API KEYS FOR MCP SERVERS =====
# OpenAI API Key (for task-master-ai)
OPENAI_API_KEY="sk-proj-YOUR_OPENAI_API_KEY"

# Perplexity API Key (for perplexity-ask and task-master-ai)
PERPLEXITY_API_KEY="pplx-YOUR_PERPLEXITY_API_KEY"

# Bright Data API Token (for brightdata MCP)
BRIGHTDATA_API_TOKEN="YOUR_BRIGHTDATA_TOKEN"

# ===== OPTIONAL CONFIGURATIONS =====
# Node Environment
NODE_ENV="development"
SKIP_DOCKER="true"

# ===== INSTRUCTIONS =====
# 1. Copy this file to your server:
#    scp seismic_secrets.env.template root@YOUR_SERVER:/root/.seismic_secrets.env
#
# 2. Edit the file and replace all placeholders with actual values:
#    nano /root/.seismic_secrets.env
#
# 3. Set proper permissions:
#    chmod 600 /root/.seismic_secrets.env
#
# 4. Run the setup script:
#    ./setup_password_auth.sh
#
# SECURITY WARNING: Never commit the actual .seismic_secrets.env file to git!
# Add it to .gitignore: echo ".seismic_secrets.env" >> .gitignore